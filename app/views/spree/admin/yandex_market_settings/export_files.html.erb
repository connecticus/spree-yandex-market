<%= render :partial => 'spree/admin/yandex_market_settings/shared/configuration_menu' %>
<div class='toolbar'>
  <ul class='actions'>
    <li id="new_ot_link">
      <%= button_link_to t('configure_yandex_market.run_generate_file_ym'), run_export_admin_yandex_market_settings_path(:exporter => 'yandex_market'), :icon => 'icon-refresh' %>
      <br>
      <br>
    </li>
    <li id="new_ot_link">
      <%= button_link_to t('configure_yandex_market.run_generate_file_wm'), run_export_admin_yandex_market_settings_path(:exporter => 'wikimart'), :icon => 'icon-refresh' %>
      <br>
    </li>
  </ul>
  <br class='clear' />
</div>
<div id="run_generate_export"></div>
<%= content_tag :h3, t('configure_yandex_market.export_files_for_ym'), :class => "name" %>
<table class="index">
  <tr>
    <th><%= t('configure_yandex_market.name') %></th>
    <th><%= t('configure_yandex_market.date') %></th>
    <th>&nbsp;</th>
  </tr>
   <% @export_files && @export_files.each do |ef| -%>
  <tr>
    <td><%= ef.first %></td>
    <td><%= ef.last %></td>
    <td class="actions"><%= link_to t("configure_yandex_market.download"), url_for("/yandex_market/#{ef.first}") %> </td>
  </tr>
   <% end -%>
</table>

<%= content_tag :h3, t('configure_yandex_market.export_files_for_wm'), :class => "name" %>
<table class="index">
  <tr>
    <th><%= t('configure_yandex_market.name') %></th>
    <th><%= t('configure_yandex_market.date') %></th>
    <th>&nbsp;</th>
  </tr>
   <% @export_files_wikimart && @export_files_wikimart.each do |ef| -%>
  <tr>
    <td><%= ef.first %></td>
    <td><%= ef.last %></td>
    <td class="actions"><%= link_to t("configure_yandex_market.download"), url_for("/wikimart/#{ef.first}") %> </td>
  </tr>
   <% end -%>
</table>
