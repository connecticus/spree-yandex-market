<%= render :partial => 'spree/admin/yandex_market_settings/shared/configuration_menu' %>
<%= content_tag :h3, t('configure_yandex_market.general'), :class => "name" %>
<%= form_tag(admin_yandex_market_settings_path, :method => :put) do -%>
  <fieldset>
    <label for="preferences_short_name">
      <%= t('configure_yandex_market.short_name') %>
      <br class="clear" />   
      <%= text_field_tag "preferences[short_name]", @config.short_name, :maxlength => 20 %>
    </label>
    <br class="clear" />
    <label for="preferences_full_name">
      <%= t('configure_yandex_market.full_name') %>
      <br class="clear" />
      <%= text_field_tag "preferences[full_name]", @config.full_name, :size => 50 %>
    </label>
    <br class="clear" />
    <label for="preferences_url">
      <%= t('configure_yandex_market.url') %>
      <br class="clear" />
      <%= text_field_tag "preferences[url]", @config.url, :size => 50 %>
    </label>    
  </fieldset>

  <fieldset>
    <legend><span><%= t('configure_yandex_market.export_category') %></span></legend>
    <%= select_tag 'preferences[category]', options_for_select(@taxons.collect{ |u| [u.name, u.name] }, @config.category) -%>
  </fieldset>

  <fieldset>
    <legend><span><%= t('configure_yandex_market.what_wares_export') %></span></legend>
    <ol>
      <li>
        <label for="preferences_wares_active">
          <%= radio_button_tag 'preferences[wares]', 'active', @config.wares == "active" %>
          <%= t('configure_yandex_market.all_active_wares') %>
        </label>
      </li>

      <li>
        <label for="preferences_wares_on_hand">
          <%= radio_button_tag 'preferences[wares]', 'on_hand', @config.wares == "on_hand" %>
          <%= t('configure_yandex_market.on_hand_wares') %>
        </label>
      </li>

    </ol>
  </fieldset>
  <fieldset>
    <legend><span><%= t('configure_yandex_market.local_delivery_cost') %></span></legend>
    <%= text_field_tag "preferences[local_delivery_cost]", @config.local_delivery_cost %>
  </fieldset>  
  <%= render :partial => 'spree/admin/yandex_market_settings/shared/form_links' %>
<% end -%>
